        <CheckBox Content="Life Expectancy and Unemployment" HorizontalAlignment="Left" Margin="903,396,0,0" VerticalAlignment="Top"  x:Name="LifeUnemployment" Grid.Row="1" Grid.Column="4" Foreground="Gray" FontFamily="Tahoma" FontSize="13" Height="15" Width="225" />
